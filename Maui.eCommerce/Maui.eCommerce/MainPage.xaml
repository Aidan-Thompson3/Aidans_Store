<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label
                Text="Aidan's Store"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />
            <Label
                Text="{Binding Display}"
                HorizontalOptions="Center" />
                
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button
                    Text="Inventory Management"
                    Clicked="InventoryClicked" />
                    
              <Button
                    Text="Shop Now"
                    Clicked="ShopClicked" />
                <Button
                    Text="View Cart"
                    Clicked="CartClicked" />
                <Button
                    Text="Configuration"
                    Clicked="ConfigClicked" />
                <Label
                    Text="Which cart would you like to use?"
                    FontSize="32"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0" />
                <Button
                    Text="Cart 1"
                    Clicked="CartSelected" />
                <Button
                    Text="Cart 2"
                    Clicked="CartSelected" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>